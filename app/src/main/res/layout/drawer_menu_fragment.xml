<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
                                              xmlns:tools="http://schemas.android.com/tools"
                                              android:layout_width="match_parent"
                                              android:layout_height="match_parent"
                                              android:background="@color/gray_light"
                                              android:orientation="vertical"
                                              tools:context="com.skeleton.fragment.DrawerMenuFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/nav_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_close_black_24dp"/>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="4dp"
            android:src="@mipmap/juspayicon"/>
    </RelativeLayout>


    <android.support.v7.widget.ContentFrameLayout
        android:id="@+id/fl_notification"
        style="@style/NavMenuItem"
        android:theme="@style/nav_text">

        <TextView
            style="@style/nav_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/notification"/>

        <TextView
            android:id="@+id/tv_notification_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="60dp"
            android:background="@drawable/notification_background"
            android:text="0"/>
    </android.support.v7.widget.ContentFrameLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.ContentFrameLayout
                android:id="@+id/fl_schedule"
                style="@style/NavMenuItem">

                <TextView
                    style="@style/nav_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/schedule"/>
            </android.support.v7.widget.ContentFrameLayout>

            <android.support.v7.widget.ContentFrameLayout
                android:id="@+id/fl_add_card"
                style="@style/NavMenuItem"
                android:theme="@style/nav_text">

                <TextView
                    style="@style/nav_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/text_add_card"/>
            </android.support.v7.widget.ContentFrameLayout>

            <android.support.v7.widget.ContentFrameLayout
                android:id="@+id/fl_settings"
                style="@style/NavMenuItem"
                android:theme="@style/nav_text">

                <TextView
                    style="@style/nav_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/settings"/>
            </android.support.v7.widget.ContentFrameLayout>

            <android.support.v7.widget.ContentFrameLayout
                android:id="@+id/fl_tutorials"
                style="@style/NavMenuItem"
                android:theme="@style/nav_text">

                <TextView
                    style="@style/nav_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/tutorials"/>
            </android.support.v7.widget.ContentFrameLayout>

            <android.support.v7.widget.ContentFrameLayout
                android:id="@+id/fl_support"
                style="@style/NavMenuItem"
                android:theme="@style/nav_text">

                <TextView
                    style="@style/nav_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/text_support"/>
            </android.support.v7.widget.ContentFrameLayout>

            <android.support.v7.widget.ContentFrameLayout
                android:id="@+id/fl_refer_earn"
                style="@style/NavMenuItem"
                android:theme="@style/nav_text">

                <TextView
                    style="@style/nav_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/text_refer_and_earn"/>
            </android.support.v7.widget.ContentFrameLayout>

            <android.support.v7.widget.ContentFrameLayout
                android:id="@+id/fl_logout"
                style="@style/NavMenuItem"
                android:theme="@style/nav_text">

                <TextView
                    style="@style/nav_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/text_logout"/>
            </android.support.v7.widget.ContentFrameLayout>
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v4.widget.NestedScrollView>

</android.support.v7.widget.LinearLayoutCompat>
